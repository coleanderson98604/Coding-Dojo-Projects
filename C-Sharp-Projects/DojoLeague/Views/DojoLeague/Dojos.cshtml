@model DojoLeague.Models.RegisterViewDojo
<div class="row">
    <div class="col s6">
        <h1>All Dojos</h1>
        <table>
            <th>
                <td>Dojo Name</td>
            </th>
            @{
                @foreach(var places in @ViewBag.Dojos)
                {
                    <tr>
                        <td>@places.Name</td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="col s6">
        <h1>Register A Dojo</h1>
        <form asp-controller="DojoLeague" asp-action="AddDojo" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Name"/>
                    <label asp-for="Name">Dojo Name</label>
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Location"/>
                    <label asp-for="Location">Dojo Location</label>
                    <span asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea asp-for="Information" class="materialize-textarea"></textarea>
                    <label asp-for="Information">Additional Dojo Information</label>
                    <span asp-validation-for="Information"></span>
                </div>
            </div>
            <div class="col s6">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>