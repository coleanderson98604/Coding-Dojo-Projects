@model LogAndReg.Models.User

<div class="row">
    <!-- Registration block -->
    <div class="col s6">
        <h2>Registration</h2>
        <form asp-controller="LogAndReg" asp-action="Register" method="post">
            <div class="input-field col s12">
                <input asp-for="FName" class="validate"/>
                <label asp-for="FName">First Name</label>
                <span asp-validation-for="FName"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="LName" class="validate"/>
                <label asp-for="LName">Last Name</label>
                <span asp-validation-for="LName"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Email" class="validate"/>
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email"></span>
                <span>@ViewBag.Duplicate</span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Password" class="validate"/>
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="input-field col s12">
                <input name="CPassword" type="password" class="validate"/>
                <label for="CPassword">Confirm Password</label>
                <span>@ViewBag.Mismatch</span>
             </div>
            <div class="col s6">
                <button class="btn waves-effect waves-light" type="submit" >Create
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
    <!--Login-->
    <div class="col s6">
        <h2>Login</h2>
        <form action="login" method="POST">
            <div class="input-field col s12">
                <input name="EmailLogin" type="email" class="validate"/>
                <label for="EmailLogin">Email</label>
                <span>@ViewBag.InvalidEmail</span>
            </div>
            <div class="input-field col s12">
                <input name="PasswordLogin" type="password" class="validate"/>
                <label for="PasswordLogin">Password</label>
                <span>@ViewBag.WrongPassword</span>
            </div>
            <div class="col s6">
                <button class="btn waves-effect waves-light" type="submit" >Login
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>