    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="Stylesheet" href="hoverinhoverout.css">
    <title>hoverinhoverout</title>
    <script>
        var temp = 'Puggo.png';
        var Default = 'OldPuggo.png';
        $(document).ready(function() {
            $('img').hover(function() {
                $(this).attr('src', Default);
            }, function() {
                $(this).attr('src', temp);
            })
        })
    </script>
</head>

